{
  "compilerOptions": {
    "target": "es6",
    "rootDir": "src",
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "sourceMap": true
  },
  "lib": [
    "dom",
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*",
    "src/**/__mocks__/*"
  ]
}
